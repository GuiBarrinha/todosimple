package com.guilhermebarrinha.todosimple.service;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.guilhermebarrinha.todosimple.models.User;
import com.guilhermebarrinha.todosimple.repository.TaskRepository;
import com.guilhermebarrinha.todosimple.repository.UserRepository;

@Service
public class UserService {

	@Autowired
	private UserRepository userRepository;
	
	@Autowired
	private TaskRepository taskRepository;

	public User findById(Long id) {
		Optional<User> user = this.userRepository.findById(id);
		return user.orElseThrow(() -> new RuntimeException());
	}
}
